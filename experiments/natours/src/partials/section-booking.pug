section(class="section-booking")
  .row
    .book
      .book__form
        form(class="form" action="#")
          div(class="u-margin-bottom-medium")
            h2(class="heading-secondary") Start Booking Now
          .form__group
            input(class="form__input" type="text" placeholder="Full Name" id="name" required)
            label(for="name" class="form__label") Full Name
          .form__group
            input(class="form__input" type="email" placeholder="Email Address" id="email" required)
            label(for="email" class="form__label") Email Address
          .form__group
            .form__radio-group
              input(class="form__radio-input" type="radio" id="small" name="size")
              label(class="form__radio-label" for="small")
                span(class="form__radio-button")
                | Small tour group
            .form__radio-group
              input(class="form__radio-input" type="radio" id="large" name="size")
              label(class="form__radio-label" for="large")
                span(class="form__radio-button")
                | Large tour group
          .form__group
            button(class="btn btn--green") Next step &rarr;




