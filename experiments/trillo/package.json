{
  "name": "trillo",
  "version": "1.0.0",
  "description": "trillo app",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass src/styles/main.scss dist/style.css -w",
    "watch:pug": "pug src --out dist --pretty",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass watch:pug",
    "compile:sass": "node-sass src/styles/main.scss dist/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' dist/style.comp.css -o dist/style.prefix.css",
    "compress:css": "node-sass dist/style.prefix.css dist/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Rosaria De Biasio",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6"
  }
}
